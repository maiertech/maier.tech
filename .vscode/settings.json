{
	"cssVariables.lookupFiles": ["**/*.css", "node_modules/open-props/open-props.min.css"],

	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"editor.tabSize": 2,

	"files.associations": {
		"*.svx": "markdown"
	},
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,

	"grammarly.files.include": ["**/README.md", "**/*.md", "**/*.svx"],
	"grammarly.config.documentDialect": "american",
	"grammarly.config.suggestions.ConjunctionAtStartOfSentence": true,
	"grammarly.config.suggestions.PassiveVoice": true,
	"grammarly.config.suggestions.UnnecessaryEllipses": true,
	"grammarly.config.suggestions.PrepositionAtTheEndOfSentence": true,
	"grammarly.config.suggestions.StylisticFragments": true,

	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.defaultScriptLanguage": "ts",

	"thunder-client.saveToWorkspace": true
}
