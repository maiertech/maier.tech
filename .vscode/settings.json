{
	"cssvar.files": ["node_modules/open-props/open-props.min.css", "apps/website/app.css"],
	// Do not ignore node_modules CSS files, which is ignored by default.
	"cssvar.ignore": [],
	// Add support for autocomplete for these file types.
	"cssvar.extensions": ["css", "svelte"],

	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"editor.tabSize": 2,

	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,

	"markyMarkdown.statsShowReadingTime": false,
	"markyMarkdown.statsShowWords": true,
	"markyMarkdown.statsShowLines": false,
	"markyMarkdown.statsShowCharacters": false,

	"svelte.enable-ts-plugin": true,

	"thunder-client.saveToWorkspace": true
}
